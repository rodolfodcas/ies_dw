@using App.DTO;
@model UserDTO
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Formuario Usuario";
}

<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-lg-6 main-header">
                <h2>Registrar<span>usuario</span></h2>
            </div>
            <div class="col-lg-6 breadcrumb-right">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html"><i class="pe-7s-home"></i></a></li>
                    <li class="breadcrumb-item">Usuarios</li>
                    <li class="breadcrumb-item">Form</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form class="needs-validation" novalidate="" asp-action="AddOrEdit">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Email" class=""></label>
                    <input asp-for="Email" class="form-control" required=""/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class=""></label>
                    <input asp-for="Password" type="password" class="form-control" required="" />
                </div>

                <div class="form-group">
                    <label asp-for="NickName" class=""></label>
                    <input asp-for="NickName" class="form-control" required=""/>
                </div>

                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Guardar" />
                    <a class="btn btn-info" asp-action="Index">Regresar</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}